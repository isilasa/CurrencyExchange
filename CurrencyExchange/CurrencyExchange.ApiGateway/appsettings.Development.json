{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "Default": ""
  },
  "ReverseProxy": {
    "Routes": {
      "userRoute": {
        "ClusterId": "userCluster",
        "Match": { "Path": "/api/users/{**catch-all}" }
      },
      "financeRoute": {
        "ClusterId": "financeCluster",
        "Match": { "Path": "/api/finance/{**catch-all}" }
      }
    },
    "Clusters": {
      "userCluster": {
        "Destinations": {
          "user1": { "Address": "http://userservice:5000/" }
        }
      },
      "financeCluster": {
        "Destinations": {
          "finance1": { "Address": "http://financeservice:5001/" }
        }
      }
    }
  }
}